<project basedir="." default="deploy" name="spigot-society">
    <target name="init">
        <property name="launcher" value="run.bat" />
        <property name="sourceDir" value="src" />
        <property name="javaDir" value="src/main/java" />
        <property name="rscDir" value="src/main/resources" />
        <property name="outputDir" value="bin" />
        <property name="libdir" value="libs" />
        <property name="jarname" value="spigot-society" />
        <property name="config" value="config/" />
        <property name="dist" value="/home/minecraft" />
    </target>
    <target name="deps" depends="init">
        <delete dir="${libdir}/spigot-1.12.2.jar"/>
        <delete dir="${libdir}/gson-2.8.2.jar"/>
        <get src="https://hub.spigotmc.org/nexus/content/groups/public/org/spigotmc/spigot-api/1.12.2-R0.1-SNAPSHOT/spigot-api-1.12.2-R0.1-20171229.033452-68.jar" dest="${libdir}/spigot-1.12.2.jar" usetimestamp="true" />
        <get src="http://central.maven.org/maven2/com/google/code/gson/gson/2.8.2/gson-2.8.2.jar" dest="${libdir}/gson-2.8.2.jar" usetimestamp="true" />
    </target>
    <target name="clean" depends="init">
        <delete dir="${outputDir}" />
    </target>
    <target name="prepare" depends="clean">
        <mkdir dir="${outputDir}" />
    </target>
    <target name="compile" depends="prepare">
        <javac destdir="${outputDir}" debug="true" debuglevel="source,lines,vars" target="1.8" source="1.8">
            <src path="${javaDir}"/>
            <classpath>
                <fileset dir="${libdir}">
                    <!-- Add dependency here -->
                </fileset>
            </classpath>
        </javac>
    </target>
    <target name="deploy" depends="compile">
          <zip destfile="${outputDir}/${jarname}.jar">
            <fileset dir="${outputDir}"/>
            <fileset dir="${rscDir}">
                <include name="plugin.yml" />
                <include name="messages/commands.properties" />
                <include name="messages/events.properties" />
            </fileset>
          </zip>
    	  <copy file="${outputDir}/${jarname}.jar" tofile="${dist}/plugins/${jarname}.jar"/>
    </target>
    <target name="run" depends="deploy">
        <exec  dir="${dist}" executable="bash">
          <arg line="${launcher}"/>
        </exec>
    </target>
</project>